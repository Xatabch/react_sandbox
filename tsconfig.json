{
    "compilerOptions": {
      "removeComments": false,
      "target": "ES5",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "module": "es2015",
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017",
        "es2018"
      ],
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "exclude": [
      "yoda",
      "node_modules"
    ]
}
